<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Retrospective.Views.AddItemPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Title ..." Text="{Binding Title}"></Entry>
            <Entry Placeholder="Description (optional) ..." Text="{Binding Description}"></Entry>
            <Button Text="Save" Command="{Binding SaveCommand}"></Button>
            <Button Text="Cancel" Command="{Binding CancelCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>